<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E7DC"

    android:orientation="vertical"

    tools:context=".ButtonsFragment">

    <Button
        android:id="@+id/button12"
        android:layout_width="106dp"
        android:layout_height="0dp"
        android:layout_marginLeft="-6dp"
        android:layout_weight="1"
        android:text="X"
        android:textSize="30sp" />
<!--        android:background="@drawable/roundbutons"-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="90dp"
        android:layout_weight="7"
        android:orientation="vertical">
<!--        android:background="@drawable/forquestions"-->


        <TextView
            android:id="@+id/txtMainpage"
            android:layout_width="305dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:text="Do you want to tell us more about you?"
            android:textColor="#3b546f"
            android:textSize="30sp" />


        <Button
            android:id="@+id/btnHobbies"
            android:layout_width="307dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".8"
            android:text="Hobbies"


            android:textSize="30sp" />
<!--            android:background="@drawable/roundbutonsforhobbies"-->


        <Button
            android:id="@+id/btnCurrentMood"
            android:layout_width="307dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".8"
            android:text="Current Mood"
            android:textSize="30sp" />
<!--            android:background="@drawable/roundbutonsforemotions"-->


        <Button
            android:id="@+id/btnQuiz"
            android:layout_width="313dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".8"
            android:text="Questionnaire"
            android:textSize="30sp" />
<!--            android:background="@drawable/roundbutonsforquestions"-->



    </LinearLayout>


</LinearLayout>