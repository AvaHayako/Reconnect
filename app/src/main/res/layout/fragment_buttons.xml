<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ButtonsFragment">

    <androidx.cardview.widget.CardView
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/colorMint"
        app:cardCornerRadius="25dp">
        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-6dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:text="X"
            android:textColor="@color/colorText"
            android:textSize="30sp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="90dp"
        android:layout_weight="7"
        android:orientation="vertical">
<!--        android:background="@drawable/forquestions"-->


        <TextView
            android:id="@+id/txtMainpage"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight=".2"
            android:textColor="@color/colorText"
            android:textAlignment="center"
            android:text="Do you want to tell us more about you?"
            android:textSize="32sp" />

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_weight=".2"
            android:elevation="15dp"
            app:cardBackgroundColor="@color/colorYellow"
            app:cardCornerRadius="25dp">

            <Button
                android:id="@+id/btnHobbies"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#00FFFFFF"
                android:text="Hobbies"
                android:textColor="@color/colorText"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="300dp"
            android:elevation="15dp"
            android:layout_height="60dp"
            android:layout_weight=".2"
            app:cardBackgroundColor="@color/colorPinkDark"
            app:cardCornerRadius="25dp">
            <Button
                android:id="@+id/btnCurrentMood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorText"
                android:layout_marginBottom="5dp"
                android:background="#00FFFFFF"
                android:text="Mood Status"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_weight=".2"
            android:elevation="15dp"
            app:cardBackgroundColor="@color/colorMint"
            app:cardCornerRadius="25dp">
            <Button
                android:id="@+id/btnQuiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#00FFFFFF"
                android:textColor="@color/colorText"
                android:text="Questionnaire"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>