<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/round_corners"

    tools:context=".Question2Fragment">

    <Button
        android:id="@+id/button12"
        android:layout_width="106dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="-6dp"
        android:background="@drawable/roundbutons"
        android:text="X"
        android:textSize="30sp" />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="90dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/forquestions"
        android:layout_weight="7"
        android:layout_marginBottom="90dp"
        >

        <TextView
            android:id="@+id/txtMainpage"
            android:layout_width="305dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#3b546f"
            android:text="Do you want to tell us more about you?"
            android:textSize="30sp" />




            <Button
                android:id="@+id/btnHobbies"
                android:layout_width="307dp"
                android:layout_height="0dp"
                android:layout_weight=".8"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:background="@drawable/roundbutons"


                android:text="Hobbies" />

            <Button
                android:id="@+id/btnCurrentMood"
                android:layout_width="307dp"
                android:layout_height="0dp"
                android:layout_weight=".8"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:background="@drawable/roundbutons"
                android:text="Current Mood" />

            <Button
                android:id="@+id/btnQuiz"
                android:layout_width="313dp"
                android:layout_height="0dp"
                android:layout_weight=".8"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:background="@drawable/roundbutons"
                android:text="Questionnaire" />





    </LinearLayout>








</LinearLayout>