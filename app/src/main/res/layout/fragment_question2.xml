<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/round_corners"

    tools:context=".Question2Fragment">

    <Button
        android:id="@+id/button12"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:background="@drawable/roundbutons"
        android:text="X"
        android:textSize="30sp" />

    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="30dp"

        android:text="Question 1/3"
        android:textSize="20sp" />





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/forquestions"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:id="@+id/txtQuestion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="You often feel stressed about school/work/friends."
            android:textColor="#3b546f"
            android:textSize="30sp" />

        <RadioGroup
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rganswer"
            >


            <RadioButton
                android:id="@+id/rbStronglyDisagree"
                android:layout_width="307dp"
                android:layout_height="44dp"
                android:buttonTint="#FFFFFF"
                android:checked="false"
                android:text="Strongly Disagree"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/rbDisagree"
                android:layout_width="307dp"
                android:buttonTint="#FFFFFF"
                android:layout_height="42dp"
                android:textSize="30sp"
                android:text="Disagree" />

            <RadioButton
                android:id="@+id/rbNeutral"
                android:buttonTint="#FFFFFF"
                android:layout_width="313dp"
                android:layout_height="49dp"
                android:textSize="30sp"
                android:text="Neutral" />
            <RadioButton
                android:id="@+id/rbAgree"
                android:layout_width="307dp"
                android:layout_height="42dp"
                android:buttonTint="#FFFFFF"
                android:textSize="30sp"
                android:text="Agree" />

            <RadioButton
                android:id="@+id/rbStronglyAgree"
                android:layout_width="313dp"
                android:buttonTint="#FFFFFF"
                android:layout_height="49dp"
                android:textSize="30sp"
                android:text="Strongly Agree" />

        </RadioGroup>



    </LinearLayout>




    <Button
        android:id="@+id/btnNext_Question1"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:background="@drawable/roundbutons"
        android:text="Next" />



</LinearLayout>