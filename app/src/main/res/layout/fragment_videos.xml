<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mentalhealth.VideosFragment">

    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/txtVideoTitle"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Title of Video Here"
        android:textAlignment="center"
        android:textColor="#4A4A4A"
        android:textSize="35dp" />

    <FrameLayout
        android:id="@+id/video_view_container"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:foreground="@drawable/bg_rounde"
        android:outlineProvider="background">

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view_detail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:autoPlay="false"
            app:showYouTubeButton="false"
            app:videoId="lDosBozB9jw" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif"
        android:text="Why we chose this video"
        android:textColor="#4A4A4A"
        android:textSize="25dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardBackgroundColor="#A2DDF8"
        app:cardCornerRadius="35dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="This video is meant to provide attachment"
            android:textColor="#4A4A4A"
            android:textSize="17dp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>